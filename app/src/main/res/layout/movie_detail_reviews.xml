<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/small_gap"
    android:paddingRight="@dimen/small_gap">
    <TextView
        android:id="@+id/movie_detail_reviews_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap"
        style="@style/Base.TextAppearance.AppCompat.Title"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_detail_review_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/movie_detail_no_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movie_detail_review_empty_text"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>
</LinearLayout>